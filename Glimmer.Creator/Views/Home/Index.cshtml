@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Glimmer Creator</h1>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Notable Figures</h5>
                </div>
                <div class="card-body">
                    <h2 class="display-6">0</h2>
                    <p class="text-muted">Characters in your universe</p>
                    <a href="#" class="btn btn-primary btn-sm">Manage Figures</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Locations</h5>
                </div>
                <div class="card-body">
                    <h2 class="display-6">0</h2>
                    <p class="text-muted">Places and settings</p>
                    <a href="#" class="btn btn-primary btn-sm">Manage Locations</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Artifacts</h5>
                </div>
                <div class="card-body">
                    <h2 class="display-6">0</h2>
                    <p class="text-muted">Objects and items</p>
                    <a href="#" class="btn btn-primary btn-sm">Manage Artifacts</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Events</h5>
                </div>
                <div class="card-body">
                    <h2 class="display-6">0</h2>
                    <p class="text-muted">Historical moments</p>
                    <a href="#" class="btn btn-primary btn-sm">Manage Events</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">No recent activity. Start building your universe!</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">Create New Universe</a>
                        <a href="#" class="btn btn-outline-primary">Add Figure</a>
                        <a href="#" class="btn btn-outline-primary">Add Location</a>
                        <a href="#" class="btn btn-outline-primary">View Timeline</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Getting Started</h5>
                </div>
                <div class="card-body">
                    <h6>Welcome to Glimmer Creator!</h6>
                    <p>This tool helps you build rich, interconnected universes for your stories. Here's how to get started:</p>
                    <ol>
                        <li><strong>Create a Universe:</strong> Use the Universe menu to create or open a universe</li>
                        <li><strong>Add Entities:</strong> Populate your universe with figures, locations, artifacts, events, and factions</li>
                        <li><strong>Define Relationships:</strong> Connect entities to create a rich, interconnected narrative</li>
                        <li><strong>Explore & Visualize:</strong> Use the timeline and relationship graph tools to visualize your universe</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
