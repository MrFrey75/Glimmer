@model Glimmer.Creator.Models.ArtifactDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">@Model.UniverseName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Artifacts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-gem-fill"></i> @Model.Name
            </h1>
            <p class="text-muted">
                <span class="badge bg-warning">@Model.ArtifactType</span>
                @if (Model.Condition != Glimmer.Core.Enums.ConditionEnum.Unknown)
                {
                    <span class="badge bg-info">@Model.Condition</span>
                }
                @if (Model.HasMagicalProperties)
                {
                    <span class="badge bg-purple">âœ¨ Magical</span>
                }
                Created @Model.CreatedAt.ToString("MMMM dd, yyyy")
            </p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <!-- Description -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-file-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            <!-- Physical Characteristics -->
            @if (!string.IsNullOrEmpty(Model.Dimensions) || !string.IsNullOrEmpty(Model.Weight) || 
                 !string.IsNullOrEmpty(Model.Color) || Model.MaterialComposition != Glimmer.Core.Enums.MaterialCompositionEnmum.Unknown)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-box"></i> Physical Characteristics</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (Model.MaterialComposition != Glimmer.Core.Enums.MaterialCompositionEnmum.Unknown)
                            {
                                <dt class="col-sm-3">Material:</dt>
                                <dd class="col-sm-9">@Model.MaterialComposition</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Dimensions))
                            {
                                <dt class="col-sm-3">Dimensions:</dt>
                                <dd class="col-sm-9">@Model.Dimensions</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Weight))
                            {
                                <dt class="col-sm-3">Weight:</dt>
                                <dd class="col-sm-9">@Model.Weight</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Color))
                            {
                                <dt class="col-sm-3">Color:</dt>
                                <dd class="col-sm-9">@Model.Color</dd>
                            }
                            @if (Model.Condition != Glimmer.Core.Enums.ConditionEnum.Unknown)
                            {
                                <dt class="col-sm-3">Condition:</dt>
                                <dd class="col-sm-9"><span class="badge bg-info">@Model.Condition</span></dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            <!-- Historical & Cultural Significance -->
            @if (!string.IsNullOrEmpty(Model.Origin) || !string.IsNullOrEmpty(Model.HistoricalPeriod) || 
                 !string.IsNullOrEmpty(Model.CulturalSignificance) || !string.IsNullOrEmpty(Model.NotableOwners))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-book"></i> Historical & Cultural Significance</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Origin))
                        {
                            <h6>Origin</h6>
                            <p>@Model.Origin</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.HistoricalPeriod))
                        {
                            <h6>Historical Period</h6>
                            <p>@Model.HistoricalPeriod</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.NotableOwners))
                        {
                            <h6>Notable Owners</h6>
                            <p>@Model.NotableOwners</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.CulturalSignificance))
                        {
                            <h6>Cultural Significance</h6>
                            <p class="mb-0">@Model.CulturalSignificance</p>
                        }
                    </div>
                </div>
            }

            <!-- Magical Properties -->
            @if (Model.HasMagicalProperties && !string.IsNullOrEmpty(Model.MagicalPropertiesDescription))
            {
                <div class="card mb-4 border-purple">
                    <div class="card-header bg-purple text-white">
                        <h5 class="mb-0"><i class="bi bi-stars"></i> Magical Properties</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.MagicalPropertiesDescription</p>
                    </div>
                </div>
            }

            <!-- Additional Notes -->
            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-pencil-square"></i> Additional Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.AdditionalNotes</p>
                    </div>
                </div>
            }

            <!-- Relationships -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-diagram-3"></i> Relationships</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Relationship management coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Type:</dt>
                        <dd class="col-sm-8"><span class="badge bg-warning">@Model.ArtifactType</span></dd>
                        
                        <dt class="col-sm-4">Created:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-4">Updated:</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Create Relationship
                        </a>
                        <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Artifacts
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i> 
                    This will also delete all relationships involving this artifact. This action cannot be undone!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form asp-action="Delete" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Artifact
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #9333ea !important;
    }
    .border-purple {
        border-color: #9333ea !important;
    }
</style>
