@model Glimmer.Creator.Models.CreateArtifactViewModel
@using Glimmer.Core.Enums
@using Glimmer.Core.Models
@{
    ViewData["Title"] = "Create Artifact";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">Universe</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Artifacts</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create</li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-plus-circle"></i> Create New Artifact</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-route-universeId="@Model.UniverseId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UniverseId" />
                        
                        <!-- Basic Information -->
                        <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-info-circle"></i> Basic Information</h5>
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label">Artifact Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter artifact name" autofocus />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="ArtifactType" class="form-label">Artifact Type</label>
                                <select asp-for="ArtifactType" class="form-select" asp-items="Html.GetEnumSelectList<ArtifactTypeEnum>()">
                                </select>
                                <span asp-validation-for="ArtifactType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Describe this artifact..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Physical Characteristics -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-box"></i> Physical Characteristics</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaterialComposition" class="form-label">Material Composition</label>
                                <select asp-for="MaterialComposition" class="form-select" asp-items="Html.GetEnumSelectList<MaterialCompositionEnmum>()">
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Condition" class="form-label">Condition</label>
                                <select asp-for="Condition" class="form-select" asp-items="Html.GetEnumSelectList<ConditionEnum>()">
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Dimensions" class="form-label">Dimensions</label>
                                <input asp-for="Dimensions" class="form-control" placeholder="e.g., 30cm x 15cm x 5cm" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Weight" class="form-label">Weight</label>
                                <input asp-for="Weight" class="form-control" placeholder="e.g., 2.5 kg" />
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Color" class="form-label">Color</label>
                                <input asp-for="Color" class="form-control" placeholder="e.g., Silver" />
                            </div>
                        </div>

                        <!-- Historical and Cultural Significance -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-book"></i> Historical & Cultural Significance</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Origin" class="form-label">Origin</label>
                                <input asp-for="Origin" class="form-control" placeholder="e.g., Ancient Kingdom of Eldoria" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="HistoricalPeriod" class="form-label">Historical Period</label>
                                <input asp-for="HistoricalPeriod" class="form-control" placeholder="e.g., Third Age" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NotableOwners" class="form-label">Notable Owners</label>
                            <textarea asp-for="NotableOwners" class="form-control" rows="2" 
                                      placeholder="List previous owners of significance..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CulturalSignificance" class="form-label">Cultural Significance</label>
                            <textarea asp-for="CulturalSignificance" class="form-control" rows="3" 
                                      placeholder="Describe the cultural importance of this artifact..."></textarea>
                        </div>

                        <!-- Magical Properties -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-stars"></i> Magical or Special Properties</h5>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="HasMagicalProperties" class="form-check-input" type="checkbox" id="hasMagicalProps" />
                                <label class="form-check-label" for="hasMagicalProps">
                                    This artifact has magical or special properties
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MagicalPropertiesDescription" class="form-label">Magical Properties Description</label>
                            <textarea asp-for="MagicalPropertiesDescription" class="form-control" rows="3" 
                                      placeholder="Describe any magical or special properties..."></textarea>
                        </div>

                        <!-- Additional Notes -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-pencil-square"></i> Additional Information</h5>
                        
                        <div class="mb-3">
                            <label asp-for="AdditionalNotes" class="form-label">Additional Notes</label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="3" 
                                      placeholder="Any other relevant information..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Artifact
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
