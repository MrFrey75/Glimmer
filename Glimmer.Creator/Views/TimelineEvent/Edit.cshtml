@model Glimmer.Creator.Models.EditTimelineEventViewModel
@using Glimmer.Core.Enums
@{
    ViewData["Title"] = "Edit TimelineEvent";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">Universe</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Events</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header">
                    <h2>
                        <i class="bi bi-pencil"></i> Edit TimelineEvent
                        @if (Model.IsAnchorEvent)
                        {
                            <span class="badge bg-warning text-dark ms-2">
                                <i class="bi bi-anchor"></i> Anchor Event
                            </span>
                        }
                    </h2>
                </div>
                <div class="card-body">
                    @if (Model.IsAnchorEvent)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> 
                            This is the primary anchor event for relative dating. It can be edited but cannot be deleted.
                        </div>
                    }
                    <form asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UniverseId" />
                        <input type="hidden" asp-for="Uuid" />
                        <input type="hidden" asp-for="IsAnchorEvent" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">TimelineEvent Name</label>
                            <input asp-for="Name" class="form-control" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EventType" class="form-label">TimelineEvent Type</label>
                            <select asp-for="EventType" class="form-select" asp-items="Html.GetEnumSelectList<TimelineEventTypeEnum>()">
                            </select>
                            <span asp-validation-for="EventType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle"></i>
                                Created: @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt") UTC<br />
                                Last Updated: @Model.UpdatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt") UTC
                            </small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
