@model Glimmer.Creator.Models.CreateTimelineEventViewModel
@using Glimmer.Core.Enums
@{
    ViewData["Title"] = "Create TimelineEvent";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">Universe</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Events</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create</li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-plus-circle"></i> Create New TimelineEvent</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-route-universeId="@Model.UniverseId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UniverseId" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">TimelineEvent Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter event name" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EventType" class="form-label">TimelineEvent Type</label>
                            <select asp-for="EventType" class="form-select" asp-items="Html.GetEnumSelectList<TimelineEventTypeEnum>()">
                            </select>
                            <span asp-validation-for="EventType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="8" 
                                      placeholder="Describe this event..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create TimelineEvent
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
