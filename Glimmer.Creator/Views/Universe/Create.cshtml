@model Glimmer.Creator.Models.CreateUniverseViewModel
@using Glimmer.Core.Models
@{
    ViewData["Title"] = "Create Universe";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h2>
                        <i class="bi bi-plus-circle"></i> Create New Universe
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Universe Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter a name for your universe" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="6" 
                                      placeholder="Describe your universe..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">
                                Provide a detailed description of your universe. You can always edit this later.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TimelineType" class="form-label">Timeline Type</label>
                            <select asp-for="TimelineType" class="form-select" asp-items="Html.GetEnumSelectList<TimelineTypeEnum>()">
                            </select>
                            <span asp-validation-for="TimelineType" class="text-danger"></span>
                            <div class="form-text">
                                <strong>Calendar-Based:</strong> Events use specific dates (Year/Month/Day with optional eras).<br/>
                                <strong>Relative Dating:</strong> Events are anchored relative to other events (e.g., "10 years after X").
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Universe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
