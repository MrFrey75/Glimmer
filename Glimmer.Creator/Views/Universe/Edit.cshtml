@model Glimmer.Creator.Models.EditUniverseViewModel
@using Glimmer.Core.Models
@{
    ViewData["Title"] = "Edit Universe";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h2>
                        <i class="bi bi-pencil"></i> Edit Universe
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Uuid" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Uuid" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Universe Name</label>
                            <input asp-for="Name" class="form-control" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Timeline Type <span class="badge bg-secondary">Read-Only</span></label>
                            <input type="text" class="form-control" value="@Model.TimelineType" readonly disabled />
                            <input type="hidden" asp-for="TimelineType" />
                            <div class="form-text">
                                <i class="bi bi-lock-fill"></i> Timeline type is set once during universe creation and cannot be changed.
                                @if (Model.TimelineType == TimelineTypeEnum.CalendarBased)
                                {
                                    <text><br/><strong>Calendar-Based:</strong> Events use specific dates (Year/Month/Day with optional eras).</text>
                                }
                                else
                                {
                                    <text><br/><strong>Relative Dating:</strong> Events are anchored relative to the primary anchor event.</text>
                                }
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle"></i>
                                Created: @Model.CreatedAt.ToString("MMMM dd, yyyy") at @Model.CreatedAt.ToString("h:mm tt") UTC<br />
                                Last Updated: @Model.UpdatedAt.ToString("MMMM dd, yyyy") at @Model.UpdatedAt.ToString("h:mm tt") UTC
                            </small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@Model.Uuid" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
