@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card mt-5">
                <div class="card-header">
                    <h3 class="text-center mb-0">
                        <i class="bi bi-key-fill"></i> Reset Password
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Enter your email address and we'll send you instructions to reset your password.</p>
                    
                    <form method="post" asp-action="ForgotPassword" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required autofocus />
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-envelope-fill"></i> Send Reset Instructions
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="bi bi-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
