@model Glimmer.Creator.Models.SpeciesDetailsViewModel
@using Glimmer.Core.Models
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">@Model.UniverseName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Species</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-bug-fill"></i> @Model.Name
            </h1>
            <p class="text-muted">
                <span class="badge bg-success">@Model.SpeciesType</span>
                Created @Model.CreatedAt.ToString("MMMM dd, yyyy")
            </p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-file-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Description</p>
                </div>
            </div>

            <!-- Physical Characteristics -->
            @if (!string.IsNullOrEmpty(Model.AverageHeight) || !string.IsNullOrEmpty(Model.AverageWeight) || 
                 !string.IsNullOrEmpty(Model.SkinColor) || !string.IsNullOrEmpty(Model.EyeColor) || 
                 !string.IsNullOrEmpty(Model.HairColor) || !string.IsNullOrEmpty(Model.DistinguishingFeatures))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-person"></i> Physical Characteristics</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (!string.IsNullOrEmpty(Model.AverageHeight))
                            {
                                <dt class="col-sm-4">Average Height:</dt>
                                <dd class="col-sm-8">@Model.AverageHeight @Model.HeightMeasure</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.AverageWeight))
                            {
                                <dt class="col-sm-4">Average Weight:</dt>
                                <dd class="col-sm-8">@Model.AverageWeight @Model.WeightMeasure</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.SkinColor))
                            {
                                <dt class="col-sm-4">Skin Color:</dt>
                                <dd class="col-sm-8">@Model.SkinColor</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.EyeColor))
                            {
                                <dt class="col-sm-4">Eye Color:</dt>
                                <dd class="col-sm-8">@Model.EyeColor</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.HairColor))
                            {
                                <dt class="col-sm-4">Hair Color:</dt>
                                <dd class="col-sm-8">@Model.HairColor</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.DistinguishingFeatures))
                            {
                                <dt class="col-sm-4">Features:</dt>
                                <dd class="col-sm-8 mb-0">@Model.DistinguishingFeatures</dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            <!-- Habitat & Distribution -->
            @if (Model.NaturalHabitat != NaturalHabitatEnum.Unknown || Model.GeographicDistribution != GeographicDistributionEnum.Unknown)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-geo"></i> Habitat & Distribution</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (Model.NaturalHabitat != NaturalHabitatEnum.Unknown)
                            {
                                <dt class="col-sm-4">Natural Habitat:</dt>
                                <dd class="col-sm-8"><span class="badge bg-info">@Model.NaturalHabitat</span></dd>
                            }
                            @if (Model.GeographicDistribution != GeographicDistributionEnum.Unknown)
                            {
                                <dt class="col-sm-4">Distribution:</dt>
                                <dd class="col-sm-8 mb-0"><span class="badge bg-secondary">@Model.GeographicDistribution</span></dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            <!-- Behavior & Social Structure -->
            @if (Model.SocialStructure != SocialStructureEnum.Unknown || !string.IsNullOrEmpty(Model.BehavioralTraits))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-people"></i> Behavior & Social Structure</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.SocialStructure != SocialStructureEnum.Unknown)
                        {
                            <h6>Social Structure</h6>
                            <p><span class="badge bg-primary">@Model.SocialStructure</span></p>
                        }
                        @if (!string.IsNullOrEmpty(Model.BehavioralTraits))
                        {
                            <h6>Behavioral Traits</h6>
                            <p class="mb-0">@Model.BehavioralTraits</p>
                        }
                    </div>
                </div>
            }

            <!-- Diet & Lifespan -->
            @if (Model.Diet != DietTypeEnum.Unknown || !string.IsNullOrEmpty(Model.AverageLifespan))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-heart-pulse"></i> Diet & Lifespan</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (Model.Diet != DietTypeEnum.Unknown)
                            {
                                <dt class="col-sm-3">Diet:</dt>
                                <dd class="col-sm-9"><span class="badge bg-warning text-dark">@Model.Diet</span></dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.AverageLifespan))
                            {
                                <dt class="col-sm-3">Lifespan:</dt>
                                <dd class="col-sm-9 mb-0">@Model.AverageLifespan</dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            <!-- Reproduction -->
            @if (Model.ReproductiveMethods != ReproductiveMethodEnum.Unknown || !string.IsNullOrEmpty(Model.GestationPeriod) || !string.IsNullOrEmpty(Model.OffspringPerBirth))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-egg"></i> Reproduction</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (Model.ReproductiveMethods != ReproductiveMethodEnum.Unknown)
                            {
                                <dt class="col-sm-4">Method:</dt>
                                <dd class="col-sm-8"><span class="badge bg-info">@Model.ReproductiveMethods</span></dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.GestationPeriod))
                            {
                                <dt class="col-sm-4">Gestation:</dt>
                                <dd class="col-sm-8">@Model.GestationPeriod</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.OffspringPerBirth))
                            {
                                <dt class="col-sm-4">Offspring:</dt>
                                <dd class="col-sm-8 mb-0">@Model.OffspringPerBirth</dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            <!-- Communication & Threats -->
            @if (Model.CommunicationMethods != CommunicationMethodEnum.Unknown || !string.IsNullOrEmpty(Model.PredatorsAndThreats) || !string.IsNullOrEmpty(Model.ConservationStatus))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-chat-dots"></i> Communication & Threats</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.CommunicationMethods != CommunicationMethodEnum.Unknown)
                        {
                            <h6>Communication</h6>
                            <p><span class="badge bg-primary">@Model.CommunicationMethods</span></p>
                        }
                        @if (!string.IsNullOrEmpty(Model.PredatorsAndThreats))
                        {
                            <h6>Predators & Threats</h6>
                            <p>@Model.PredatorsAndThreats</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.ConservationStatus))
                        {
                            <h6>Conservation Status</h6>
                            <p class="mb-0">@Model.ConservationStatus</p>
                        }
                    </div>
                </div>
            }

            <!-- Magical Abilities -->
            @if (Model.HasMagicalAbilities || !string.IsNullOrEmpty(Model.MagicalAbilitiesDescription))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-stars"></i> Magical or Special Abilities</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.HasMagicalAbilities)
                        {
                            <p class="text-success"><i class="bi bi-check-circle-fill"></i> This species has magical abilities</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.MagicalAbilitiesDescription))
                        {
                            <p class="mb-0">@Model.MagicalAbilitiesDescription</p>
                        }
                    </div>
                </div>
            }

            <!-- Additional Notes -->
            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-pencil-square"></i> Additional Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.AdditionalNotes</p>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-diagram-3"></i> Relationships</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Relationship management coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Type:</dt>
                        <dd class="col-sm-7"><span class="badge bg-success">@Model.SpeciesType</span></dd>
                        
                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-5">Updated:</dt>
                        <dd class="col-sm-7 mb-0">@Model.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Create Relationship
                        </a>
                        <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Species
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i> 
                    This will also delete all relationships involving this species. This action cannot be undone!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form asp-action="Delete" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Species
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
