@model Glimmer.Creator.Models.SpeciesListViewModel
@{
    ViewData["Title"] = "Species";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">@Model.UniverseName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Species</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-bug-fill"></i> Species
            </h1>
            <p class="lead">Lifeforms and creatures in @Model.UniverseName</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" asp-route-universeId="@Model.UniverseId" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Create New Species
            </a>
        </div>
    </div>

    @if (Model.Species.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var species in Model.Species)
            {
                <div class="col">
                    <div class="card h-100 species-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@species.Uuid" class="text-decoration-none">
                                    <i class="bi bi-bug"></i> @species.Name
                                </a>
                            </h5>
                            <p class="card-text text-truncate-3">@species.Description</p>
                            <div class="mt-3">
                                <span class="badge bg-success">
                                    @species.SpeciesType
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                <i class="bi bi-calendar-event"></i> Created @species.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                            <div class="btn-group float-end" role="group">
                                <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@species.Uuid" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@species.Uuid" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col text-center py-5">
                <div class="empty-state">
                    <i class="bi bi-bug-fill" style="font-size: 4rem; opacity: 0.3;"></i>
                    <h3 class="mt-3">No Species Yet</h3>
                    <p class="text-muted">Create your first species to populate your universe!</p>
                    <a asp-action="Create" asp-route-universeId="@Model.UniverseId" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-plus-circle"></i> Create Your First Species
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <style>
        .species-card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .species-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(25, 135, 84, 0.3);
        }
        .text-truncate-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}
