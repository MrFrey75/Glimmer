@model Glimmer.Creator.Models.FactionDetailsViewModel
@using Glimmer.Core.Enums
@using Glimmer.Core.Models
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">@Model.UniverseName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Factions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-shield-fill"></i> @Model.Name
            </h1>
            <p class="text-muted">
                <span class="badge bg-primary">@Model.FactionType</span>
                @if (Model.LeadershipStructure != LeadershipStructureEnum.Unknown)
                {
                    <span class="badge bg-secondary">@Model.LeadershipStructure</span>
                }
                Created @Model.CreatedAt.ToString("MMMM dd, yyyy")
            </p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-file-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Description</p>
                </div>
            </div>

            @if (Model.LeadershipStructure != LeadershipStructureEnum.Unknown || !string.IsNullOrEmpty(Model.MembershipCriteria) || !string.IsNullOrEmpty(Model.Hierarchy))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-diagram-3"></i> Organizational Structure</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.LeadershipStructure != LeadershipStructureEnum.Unknown)
                        {
                            <h6>Leadership Structure</h6>
                            <p><span class="badge bg-secondary">@Model.LeadershipStructure</span></p>
                        }
                        @if (!string.IsNullOrEmpty(Model.MembershipCriteria))
                        {
                            <h6>Membership Criteria</h6>
                            <p>@Model.MembershipCriteria</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Hierarchy))
                        {
                            <h6>Hierarchy</h6>
                            <p class="mb-0">@Model.Hierarchy</p>
                        }
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.PrimaryGoals) || !string.IsNullOrEmpty(Model.Motivations) || !string.IsNullOrEmpty(Model.KeyActivities))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-bullseye"></i> Goals and Objectives</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.PrimaryGoals))
                        {
                            <h6>Primary Goals</h6>
                            <p>@Model.PrimaryGoals</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Motivations))
                        {
                            <h6>Motivations</h6>
                            <p>@Model.Motivations</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.KeyActivities))
                        {
                            <h6>Key Activities</h6>
                            <p class="mb-0">@Model.KeyActivities</p>
                        }
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.FoundingHistory) || !string.IsNullOrEmpty(Model.EvolutionOverTime))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-clock-history"></i> Historical Background</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.FoundingHistory))
                        {
                            <h6>Founding History</h6>
                            <p>@Model.FoundingHistory</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.EvolutionOverTime))
                        {
                            <h6>Evolution Over Time</h6>
                            <p class="mb-0">@Model.EvolutionOverTime</p>
                        }
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-pencil-square"></i> Additional Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.AdditionalNotes</p>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-diagram-3"></i> Relationships</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Relationship management coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Type:</dt>
                        <dd class="col-sm-7"><span class="badge bg-primary">@Model.FactionType</span></dd>
                        
                        <dt class="col-sm-5">Leadership:</dt>
                        <dd class="col-sm-7">
                            @if (Model.LeadershipStructure != LeadershipStructureEnum.Unknown)
                            {
                                <span class="badge bg-secondary">@Model.LeadershipStructure</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-5">Updated:</dt>
                        <dd class="col-sm-7 mb-0">@Model.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Create Relationship
                        </a>
                        <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Factions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i> 
                    This will also delete all relationships involving this faction. This action cannot be undone!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form asp-action="Delete" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Faction
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
