@model Glimmer.Creator.Models.EntityRelationListViewModel

@{
    ViewData["Title"] = "Relationships";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index" class="text-decoration-none" style="color: #9333ea;">Universes</a></li>
        <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId" class="text-decoration-none" style="color: #9333ea;">@Model.UniverseName</a></li>
        <li class="breadcrumb-item active text-light" aria-current="page">Relationships</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-light mb-0">
        <i class="bi bi-diagram-3 me-2" style="color: #9333ea;"></i>Relationships
    </h2>
    <a asp-action="Create" asp-route-id="@Model.UniverseId" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>New Relationship
    </a>
</div>

@if (Model.Relations.Count == 0)
{
    <div class="alert alert-secondary" role="alert">
        <i class="bi bi-info-circle me-2"></i>No relationships yet. Create your first relationship to connect entities in this universe.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>From Entity</th>
                    <th>Relationship</th>
                    <th>To Entity</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var relation in Model.Relations)
                {
                    <tr>
                        <td>
                            <div>
                                <strong class="text-light">@relation.FromEntityName</strong>
                                <br />
                                <small class="text-muted">@relation.FromEntityType</small>
                            </div>
                        </td>
                        <td>
                            <span class="badge bg-primary">@relation.RelationType</span>
                        </td>
                        <td>
                            <div>
                                <strong class="text-light">@relation.ToEntityName</strong>
                                <br />
                                <small class="text-muted">@relation.ToEntityType</small>
                            </div>
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(relation.Description))
                            {
                                <small class="text-muted">@relation.Description</small>
                            }
                            else
                            {
                                <small class="text-muted fst-italic">No description</small>
                            }
                        </td>
                        <td>
                            <small class="text-muted">@relation.CreatedAt.ToString("yyyy-MM-dd")</small>
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@Model.UniverseId" asp-route-relationId="@relation.RelationId" 
                                   class="btn btn-outline-light" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal-@relation.RelationId"
                                        title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Delete Confirmation Modals -->
@foreach (var relation in Model.Relations)
{
    <div class="modal fade" id="deleteModal-@relation.RelationId" tabindex="-1" aria-labelledby="deleteModalLabel-@relation.RelationId" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark border-secondary">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-light" id="deleteModalLabel-@relation.RelationId">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-light">
                    <p class="mb-3">Are you sure you want to delete this relationship?</p>
                    <div class="alert alert-warning" role="alert">
                        <strong>@relation.FromEntityName</strong> @relation.RelationType <strong>@relation.ToEntityName</strong>
                    </div>
                    <p class="text-muted mb-0">This action cannot be undone.</p>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-route-id="@Model.UniverseId" asp-route-relationId="@relation.RelationId" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Relationship
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
