@model ErrorViewModel
@{
    ViewData["Title"] = Model?.ErrorTitle ?? "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger" role="alert">
                <h1 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> @(Model?.ErrorTitle ?? "Error")
                </h1>
                <hr>
                <p class="mb-0">
                    @if (!string.IsNullOrEmpty(Model?.Message))
                    {
                        @Model.Message
                    }
                    else
                    {
                        <text>An unexpected error occurred while processing your request.</text>
                    }
                </p>
            </div>

            @if (Model?.StatusCode > 0)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Error Details</h5>
                        <p class="card-text">
                            <strong>Status Code:</strong> @Model.StatusCode<br />
                            @if (!string.IsNullOrEmpty(Model.Path))
                            {
                                <strong>Path:</strong> <code>@Model.Path</code><br />
                            }
                            @if (Model.ShowRequestId)
                            {
                                <strong>Request ID:</strong> <code>@Model.RequestId</code><br />
                            }
                        </p>
                    </div>
                </div>
            }

            @if (Model?.ShowDetails == true)
            {
                <div class="card mb-3 border-warning">
                    <div class="card-header bg-warning text-dark">
                        <strong>Technical Details (Development Mode)</strong>
                    </div>
                    <div class="card-body">
                        <pre class="mb-0">@Model.Details</pre>
                    </div>
                </div>
            }

            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="bi bi-house-fill"></i> Return to Home
                </a>
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Go Back
                </a>
            </div>
        </div>
    </div>
</div>

@if (Model?.ShowRequestId == true)
{
    <div class="text-center mt-5 text-muted">
        <small>
            If you continue to experience issues, please contact support with Request ID: <code>@Model.RequestId</code>
        </small>
    </div>
}

