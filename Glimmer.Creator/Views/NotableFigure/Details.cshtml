@model Glimmer.Creator.Models.NotableFigureDetailsViewModel
@using Glimmer.Core.Models
@using Glimmer.Core.Enums
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">@Model.UniverseName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Figures</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-person-fill"></i> @Model.Name
            </h1>
            <p class="text-muted">
                <span class="badge bg-primary">@Model.FigureType</span>
                @if (Model.Species != null)
                {
                    <span class="badge bg-success">@Model.Species.Name</span>
                }
                Created @Model.CreatedAt.ToString("MMMM dd, yyyy")
            </p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-file-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Description</p>
                </div>
            </div>

            @if (Model.Species != null)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-bug-fill"></i> Species</h5>
                    </div>
                    <div class="card-body">
                        <p>
                            <strong>@Model.Species.Name</strong> (<span class="badge bg-success">@Model.Species.SpeciesType</span>)
                            <br/>
                            <small class="text-muted">@Model.Species.Description</small>
                        </p>
                        <a asp-controller="Species" asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Species.Uuid" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-arrow-right"></i> View Species Details
                        </a>
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Height) || !string.IsNullOrEmpty(Model.Weight) || !string.IsNullOrEmpty(Model.SkinColor) || 
                 !string.IsNullOrEmpty(Model.EyeColor) || !string.IsNullOrEmpty(Model.HairColor) || !string.IsNullOrEmpty(Model.DistinguishingFeatures) ||
                 Model.Gender != Glimmer.Core.Enums.GenderEnum.Unknown || Model.SexualOrientation != Glimmer.Core.Enums.SexualOrientationEnum.Unknown)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-person"></i> Physical Characteristics</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (!string.IsNullOrEmpty(Model.Height))
                            {
                                <dt class="col-sm-3">Height:</dt>
                                <dd class="col-sm-9">@Model.Height @Model.HeightMeasure</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.Weight))
                            {
                                <dt class="col-sm-3">Weight:</dt>
                                <dd class="col-sm-9">@Model.Weight @Model.WeightMeasure</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.SkinColor))
                            {
                                <dt class="col-sm-3">Skin Color:</dt>
                                <dd class="col-sm-9">@Model.SkinColor</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.EyeColor))
                            {
                                <dt class="col-sm-3">Eye Color:</dt>
                                <dd class="col-sm-9">@Model.EyeColor</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.HairColor))
                            {
                                <dt class="col-sm-3">Hair Color:</dt>
                                <dd class="col-sm-9">@Model.HairColor</dd>
                            }
                            @if (!string.IsNullOrEmpty(Model.DistinguishingFeatures))
                            {
                                <dt class="col-sm-3">Features:</dt>
                                <dd class="col-sm-9">@Model.DistinguishingFeatures</dd>
                            }
                            @if (Model.Gender != Glimmer.Core.Enums.GenderEnum.Unknown)
                            {
                                <dt class="col-sm-3">Gender:</dt>
                                <dd class="col-sm-9"><span class="badge bg-info">@Model.Gender</span></dd>
                            }
                            @if (Model.SexualOrientation != Glimmer.Core.Enums.SexualOrientationEnum.Unknown)
                            {
                                <dt class="col-sm-3">Orientation:</dt>
                                <dd class="col-sm-9 mb-0"><span class="badge bg-secondary">@Model.SexualOrientation</span></dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            @if (Model.HasMagicalAbilities || !string.IsNullOrEmpty(Model.MagicalAbilitiesDescription))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-stars"></i> Magical or Special Abilities</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.HasMagicalAbilities)
                        {
                            <p class="text-success"><i class="bi bi-check-circle-fill"></i> This figure has magical abilities</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.MagicalAbilitiesDescription))
                        {
                            <p class="mb-0">@Model.MagicalAbilitiesDescription</p>
                        }
                    </div>
                </div>
            }

            @if (Model.BirthDate.HasValue || Model.DeathDate.HasValue || !string.IsNullOrEmpty(Model.Occupation) || 
                 !string.IsNullOrEmpty(Model.NotableAchievements) || !string.IsNullOrEmpty(Model.Biography))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-calendar"></i> Biographical Information</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.BirthDate.HasValue || Model.DeathDate.HasValue)
                        {
                            <h6>Lifespan</h6>
                            <p>
                                @if (Model.BirthDate.HasValue)
                                {
                                    <span>Born: @Model.BirthDate.Value.ToString("MMMM dd, yyyy")</span>
                                }
                                @if (Model.DeathDate.HasValue)
                                {
                                    <span>
                                        @if (Model.BirthDate.HasValue) { <text> - </text> }
                                        Died: @Model.DeathDate.Value.ToString("MMMM dd, yyyy")
                                    </span>
                                }
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Occupation))
                        {
                            <h6>Occupation</h6>
                            <p>@Model.Occupation</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.NotableAchievements))
                        {
                            <h6>Notable Achievements</h6>
                            <p>@Model.NotableAchievements</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Biography))
                        {
                            <h6>Biography</h6>
                            <p class="mb-0">@Model.Biography</p>
                        }
                    </div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-pencil-square"></i> Additional Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.AdditionalNotes</p>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-diagram-3"></i> Relationships</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Relationship management coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Type:</dt>
                        <dd class="col-sm-7"><span class="badge bg-primary">@Model.FigureType</span></dd>
                        
                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-5">Updated:</dt>
                        <dd class="col-sm-7 mb-0">@Model.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Create Relationship
                        </a>
                        <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Figures
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i> 
                    This will also delete all relationships involving this figure. This action cannot be undone!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                <form asp-action="Delete" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Figure
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
