@model Glimmer.Creator.Models.EditNotableFigureViewModel
@using Glimmer.Core.Enums
@using Glimmer.Core.Models
@{
    ViewData["Title"] = "Create Notable Figure";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">Universe</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid">Figures</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create</li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-plus-circle"></i> Edit Notable Figure</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Uuid" asp-route-universeId="@Model.UniverseId" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UniverseId" />
                        <input type="hidden" asp-for="Uuid" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <input type="hidden" asp-for="UpdatedAt" />
                        
                        <!-- Basic Information -->
                        <h5 class="border-bottom pb-2 mb-3"><i class="bi bi-info-circle"></i> Basic Information</h5>
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Name" class="form-label">Figure Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter figure name" autofocus />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="FigureType" class="form-label">Figure Type</label>
                                <select asp-for="FigureType" class="form-select" asp-items="Html.GetEnumSelectList<FigureTypeEnum>()">
                                </select>
                                <span asp-validation-for="FigureType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Brief description of this figure..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SpeciesId" class="form-label">Species (Optional)</label>
                            <select asp-for="SpeciesId" class="form-select" asp-items="ViewBag.SpeciesList">
                                <option value="">-- Select Species --</option>
                            </select>
                            <div class="form-text">Selecting a species will auto-fill physical characteristics with species defaults.</div>
                        </div>

                        <!-- Physical Characteristics -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-person"></i> Physical Characteristics</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Height" class="form-label">Height</label>
                                <input asp-for="Height" class="form-control" placeholder="e.g., 6'2&quot;" />
                                <select asp-for="HeightMeasure" class="form-select" asp-items="Html.GetEnumSelectList<HeightMeasureEnum>()">
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Weight" class="form-label">Weight</label>
                                <input asp-for="Weight" class="form-control" placeholder="e.g., 180 lbs" />
                                <select asp-for="WeightMeasure" class="form-select" asp-items="Html.GetEnumSelectList<WeightMeasureEnum>()">
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="SkinColor" class="form-label">Skin Color</label>
                                <input asp-for="SkinColor" class="form-control" placeholder="e.g., Pale, Tan" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="EyeColor" class="form-label">Eye Color</label>
                                <input asp-for="EyeColor" class="form-control" placeholder="e.g., Blue, Brown" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="HairColor" class="form-label">Hair Color</label>
                                <input asp-for="HairColor" class="form-control" placeholder="e.g., Black, Blonde" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DistinguishingFeatures" class="form-label">Distinguishing Features</label>
                            <textarea asp-for="DistinguishingFeatures" class="form-control" rows="2" 
                                      placeholder="Scars, tattoos, unique traits..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<GenderEnum>()">
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="SexualOrientation" class="form-label">Sexual Orientation</label>
                                <select asp-for="SexualOrientation" class="form-select" asp-items="Html.GetEnumSelectList<SexualOrientationEnum>()">
                                </select>
                            </div>
                        </div>

                        <!-- Magical Abilities -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-stars"></i> Magical or Special Abilities</h5>
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="HasMagicalAbilities" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="HasMagicalAbilities">
                                    This figure has magical or special abilities
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MagicalAbilitiesDescription" class="form-label">Magical Abilities Description</label>
                            <textarea asp-for="MagicalAbilitiesDescription" class="form-control" rows="3" 
                                      placeholder="Describe any magical powers or special abilities..."></textarea>
                        </div>

                        <!-- Biographical Information -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-calendar"></i> Biographical Information</h5>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BirthDate" class="form-label">Birth Date</label>
                                <input asp-for="BirthDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DeathDate" class="form-label">Death Date (if applicable)</label>
                                <input asp-for="DeathDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Occupation" class="form-label">Occupation</label>
                            <input asp-for="Occupation" class="form-control" placeholder="e.g., Knight, Merchant, Wizard" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="NotableAchievements" class="form-label">Notable Achievements</label>
                            <textarea asp-for="NotableAchievements" class="form-control" rows="3" 
                                      placeholder="Major accomplishments, titles, victories..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Biography" class="form-label">Biography</label>
                            <textarea asp-for="Biography" class="form-control" rows="5" 
                                      placeholder="Life story, background, personality..."></textarea>
                        </div>

                        <!-- Additional Notes -->
                        <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="bi bi-pencil-square"></i> Additional Information</h5>
                        
                        <div class="mb-3">
                            <label asp-for="AdditionalNotes" class="form-label">Additional Notes</label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="3" 
                                      placeholder="Any other relevant information..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle"></i>
                                Created: @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt") UTC<br />
                                Last Updated: @Model.UpdatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt") UTC
                            </small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
