@model Glimmer.Creator.Models.LocationDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Index">Universes</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Universe" asp-action="Details" asp-route-id="@Model.UniverseId">@Model.UniverseName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-route-universeId="@Model.UniverseId">Locations</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-pin-map-fill"></i> @Model.Name
            </h1>
            <p class="text-muted">
                <span class="badge bg-success">@Model.LocationType</span>
                @if (!string.IsNullOrEmpty(Model.ParentLocationName))
                {
                    <span class="badge bg-secondary">
                        <i class="bi bi-arrow-up-circle"></i> 
                        <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.ParentLocationId" class="text-white text-decoration-none">
                            @Model.ParentLocationName
                        </a>
                    </span>
                }
                Created @Model.CreatedAt.ToString("MMMM dd, yyyy")
            </p>
        </div>
        <div class="col-auto">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-file-text"></i> Description</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>

            @if (Model.ChildLocations.Any())
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5><i class="bi bi-diagram-3"></i> Child Locations (@Model.ChildLocations.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var child in Model.ChildLocations)
                            {
                                <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@child.Uuid" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            <i class="bi bi-pin-map"></i> @child.Name
                                        </h6>
                                        <small><span class="badge bg-success">@child.LocationType</span></small>
                                    </div>
                                    <p class="mb-1 text-truncate">@child.Description</p>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-diagram-3"></i> Relationships</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Relationship management coming soon...</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Type:</dt>
                        <dd class="col-sm-7"><span class="badge bg-success">@Model.LocationType</span></dd>
                        
                        @if (!string.IsNullOrEmpty(Model.ParentLocationName))
                        {
                            <dt class="col-sm-5">Parent:</dt>
                            <dd class="col-sm-7">
                                <a asp-action="Details" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.ParentLocationId">
                                    @Model.ParentLocationName
                                </a>
                            </dd>
                        }
                        
                        <dt class="col-sm-5">Children:</dt>
                        <dd class="col-sm-7">@Model.ChildLocations.Count</dd>
                        
                        <dt class="col-sm-5">Created:</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-5">Updated:</dt>
                        <dd class="col-sm-7">@Model.UpdatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-link-45deg"></i> Create Relationship
                        </a>
                        <a asp-action="Index" asp-route-universeId="@Model.UniverseId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Locations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                @if (Model.ChildLocations.Any())
                {
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle"></i> 
                        This location has @Model.ChildLocations.Count child location(s). Please delete or move them first.
                    </p>
                }
                else
                {
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle"></i> 
                        This will also delete all relationships involving this location. This action cannot be undone!
                    </p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
                @if (!Model.ChildLocations.Any())
                {
                    <form asp-action="Delete" asp-route-universeId="@Model.UniverseId" asp-route-id="@Model.Uuid" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete Location
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
